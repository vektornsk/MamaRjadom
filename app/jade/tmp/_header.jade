mixin header(className)
	.header&attributes(attributes)(class=className)
		.wrap
			.logo
				a.logo__link(href="/")
					img.logo__img(src="/images/svg/Logo_header.svg", title="Мама Рядом", alt="Мама Рядом")
			.m-menu
			ul.menu.menu_orange
				li.menu__item
					a.menu__link.menu-icon-m.active(href="#") Меню
				li.menu__item
					a.menu__link.menu-icon-d(href="/html/delivery.html") Доставка
				li.menu__item
					a.menu__link.menu-icon-b(href="/html/blog.html") Блог 
				li.menu__item
					a.menu__link.menu-icon-a(href="/html/about.html") О нас
				li.menu__item
					a.menu__link.menu-icon-c(href="/html/contacts.html") Контакты
				li.menu__item.m-menu-item
					.phone__num +7 (383) 123-45-67
					.phone__txt Заказы на доставку принимаются<br>с 10:00 до 21:30	
				.m-logo
					a.logo__link(href="/")
						img.logo__img(src="/images/svg/Logo_footer.svg", title="Мама Рядом", alt="Мама Рядом")
			.header-right
				.phone.phone_orange
					.phone__num +7 (383) 123-45-67
					.phone__txt Заказы на доставку принимаются<br>с 10:00 до 21:30
				a.cart(href="#")
						img.cart__img(src="/images/svg/m_corzina.svg", title="Корзина", alt="Корзина")
						img.cart__img_mob(src="/images/svg/cart_mobile.svg", title="Корзина", alt="Корзина")
